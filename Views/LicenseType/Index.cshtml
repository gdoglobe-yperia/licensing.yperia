
@model Web_App_Licensing.Models.dbContext.tblLicenseType
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>




<h2>Licensing</h2>


<div class="container">

    <div class="wrapper">
        <div class="inner">
            @using (Html.BeginForm("Create", "LicenseType", FormMethod.Post))
            {

                <h3>CREER UN TYPE DE LICENCE</h3>
                <h2>Veillez saisir les informations de votre de la licence</h2>
                @Html.HiddenFor(x => x.ID)
                <div class="form-group">

                    <label for="" class="label-input">Nom</label>
                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "error" })
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "", @type = "text" })
                </div>
                <div class="form-group">
                    <label for="" class="label-input">Code</label>
                    @Html.ValidationMessageFor(x => x.Code, "", new { @class = "error" })
                    @Html.TextBoxFor(x => x.Code, new { @class = "form-control", @placeholder = "", @type = "text" })
                </div>
                <div class="form-group">
                    <label for="" class="label-input">Type</label>
                    @Html.ValidationMessageFor(x => x.Type, "", new { @class = "error" })
                    @Html.TextBoxFor(x => x.Type, new { @class = "form-control", @placeholder = "", @type = "text" })

                </div>


                
                    <fieldset class="border p-2 form-group">
                        <legend class="control-label pl-1">Pack licence</legend>


                        @for (int i = 0; i < 3; i++)
                        {
                            <div class="form-group">
                        
                            <label for="SubscriptionPack[@i].Name" class="label-input">Name</label>
                            <input type="text" name="SubscriptionPack[@i].Name" value="" />
                        
                            </div>
                        }

                    </fieldset>
                

                



                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-danger">Cancel</button>
                </div>
            }

            @if (ViewBag.Message != null)
            {


                @Html.Raw(ViewBag.Message)


                <p>@ViewBag.Message</p>
            }

            <div class="image-holder">
                <img src="images/registration-form-5.jpg" alt="">
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-lg-4">

        </div>
        <div class="col-lg-4">

        </div>
    </div>
</div>



@model List<Web_App_Licensing.Models.dbContext.tblLicenseType>
@{
    ViewBag.Title = "Licences";
    int i = 1;
}


@Html.ActionLink("Ajouter", "Create", "License", null, new { @class = "btn btn-primary", @role = "button" })


<table class="table table-hover">

    <thead>

        <tr>
            <th scope="col">N°</th>
            <th scope="col">Name</th>
            <th scope="col">Type</th>
            <th scope="col">Code</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr class="">
                <th scope="col">@i</th>
                <th scope="col"><a href="@Url.Action("Show","License", new { item.ID})" class="">@item.Name</a></th>
                <th scope="col">@item.Type</th>
                <th scope="col">@item.Code</th>
               
                @{i++;}
            </tr>

        }
    </tbody>
</table>

